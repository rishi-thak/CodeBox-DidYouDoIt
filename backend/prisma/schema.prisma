generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DEVELOPER
  TECH_LEAD
  PRODUCT_MANAGER
  BOARD_ADMIN
  CANDIDATE // Added for new bootcamps
}

enum AssignmentType {
  VIDEO
  PDF
  LINK
  DOCUMENT
}

enum UserStatus {
  ACTIVE
  ALUMNI
  ARCHIVED
}

enum GroupStatus {
  ACTIVE
  ARCHIVED
}

enum MemberStatus {
  ACTIVE
  TENTATIVE
  PENDING_APPROVAL
}

model Cohort {
  id        String   @id @default(uuid())
  name      String   @unique // e.g., "Fall 2025"
  isActive  Boolean  @default(false)
  startDate DateTime?
  endDate   DateTime?
  createdAt DateTime @default(now())
  groups    Group[]
}

model User {
  id          String     @id @default(uuid())
  email       String     @unique
  fullName    String?
  role        Role       @default(DEVELOPER)
  status      UserStatus @default(ACTIVE)
  createdAt   DateTime   @default(now())
  completions Completion[]
  groups      UserGroup[]
}

model Group {
  id          String            @id @default(uuid())
  name        String
  description String?
  cohortId    String?
  status      GroupStatus       @default(ACTIVE)
  createdAt   DateTime          @default(now())
  
  cohort      Cohort?           @relation(fields: [cohortId], references: [id])
  assignments AssignmentGroup[]
  members     UserGroup[]
}

model Assignment {
  id           String            @id @default(uuid())
  title        String
  description  String?
  type         AssignmentType
  contentUrl   String
  thumbnailUrl String?
  dueDate      DateTime?
  createdAt    DateTime          @default(now())
  assignedTo   AssignmentGroup[]
  completions  Completion[]
}

model UserGroup {
  id       String       @id @default(uuid())
  userId   String
  groupId  String
  status   MemberStatus @default(ACTIVE)
  joinedAt DateTime     @default(now())
  group    Group        @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model AssignmentGroup {
  id           String     @id @default(uuid())
  assignmentId String
  groupId      String
  assignedAt   DateTime   @default(now())
  
  // Custom overrides for this group
  customDueDate DateTime?
  customNote    String?
  isVisible     Boolean    @default(true)

  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  group        Group      @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, groupId])
}

model Completion {
  id           String     @id @default(uuid())
  userId       String
  assignmentId String
  completedAt  DateTime   @default(now())
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, assignmentId])
}
