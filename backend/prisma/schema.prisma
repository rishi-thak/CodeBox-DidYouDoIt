generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  fullName    String?
  role        Role         @default(DEVELOPER)
  createdAt   DateTime     @default(now())
  completions Completion[]
  groups      UserGroup[]
}

model Group {
  id          String            @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime          @default(now())
  assignments AssignmentGroup[]
  members     UserGroup[]
}

model Assignment {
  id           String            @id @default(uuid())
  title        String
  description  String?
  type         AssignmentType
  contentUrl   String
  thumbnailUrl String?
  dueDate      DateTime?
  createdAt    DateTime          @default(now())
  assignedTo   AssignmentGroup[]
  completions  Completion[]
}

model UserGroup {
  id       String   @id @default(uuid())
  userId   String
  groupId  String
  joinedAt DateTime @default(now())
  group    Group    @relation(fields: [groupId], references: [id], onDelete: Cascade)
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, groupId])
}

model AssignmentGroup {
  id           String     @id @default(uuid())
  assignmentId String
  groupId      String
  assignedAt   DateTime   @default(now())
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  group        Group      @relation(fields: [groupId], references: [id], onDelete: Cascade)

  @@unique([assignmentId, groupId])
}

model Completion {
  id           String     @id @default(uuid())
  userId       String
  assignmentId String
  completedAt  DateTime   @default(now())
  assignment   Assignment @relation(fields: [assignmentId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, assignmentId])
}

enum Role {
  DEVELOPER
  TECH_LEAD
  PRODUCT_MANAGER
  BOARD_ADMIN
}

enum AssignmentType {
  VIDEO
  PDF
  LINK
  DOCUMENT
}
